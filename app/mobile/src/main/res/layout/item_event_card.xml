<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_margin="6dp"
    android:orientation="vertical"
    android:padding="8dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0.7dp"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_event_card_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prova Titolo"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/item_event_card_tv_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_event_card_tv_title"
            android:text="Categorie"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/item_event_card_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_above="@id/item_event_card_tv_time"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_event"
            android:drawableTint="@color/colorAccent"
            android:gravity="center"
            android:text="01/01/1990"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/item_event_card_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_above="@id/item_event_card_tv_room"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_access_time"
            android:drawableTint="@color/colorAccent"
            android:gravity="center"
            android:text="09:00:00 - 10:00:00"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/item_event_card_tv_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="@color/colorAccent"
            android:gravity="center"
            android:text="Aula 10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>